<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/list_item_text_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_text_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forecast_day_textView"
            style="@style/list_main_item_text_style"
            android:text="tommorrow" />

        <TextView
            android:id="@+id/forecast_mode_textView"
            style="@style/list_child_item_text_style"
            android:text="clear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/max_temp_textview"
            style="@style/list_main_item_text_style"
            android:text="37"
            android:textColor="@color/list_main_temperature_text_color" />

        <TextView
            android:id="@+id/min_temp_textview"
            style="@style/list_child_item_text_style"
            android:text="23" />
    </LinearLayout>
</RelativeLayout>